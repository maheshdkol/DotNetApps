@model IEnumerable<MVCGridDemo.Models.SchemeMaster>

@using GridMvc.Html
@{
    ViewBag.Title = "Details";
}
@{
    Layout = null;
}

<h2>Details</h2>

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap.rtl.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery/jquery.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>

<div class="code-cut">
    @Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add(c => c.SchemeID).Titled("Scheme ID").Filterable(true);
                        columns.Add(c => c.SchemeName).Titled("SchemeName").Filterable(true);
                        columns.Add()
                        .Encoded(false)
                        .Sanitized(false)
                        .SetWidth(30)
                        .RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { id = o.SchemeID }));

                    }).WithPaging(10).Sortable(true)

</div>
